<%= form_for @poll , method: :post, url: poll_vote_path do |f| %>
	<b>Poll : </b><%= @poll.name %><br>
	<%= hidden_field_tag :id, @poll.id %>

	<% @poll.choices.each do |choice|%>

    <%= radio_button_tag(:radio, choice.id) %>
    <%= label_tag(:tag, choice.name) %><br>
    
    <% end %>

  	 <br><%= f.submit "Vote" %>

<% end %>


